@model IEnumerable<PFS_BIP.Models.Puppies>

@{
    ViewData["Title"] = "Quarantine Puppies";
}

<h1>Puppies in Quarantine</h1>
<br />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChipNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChipNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><button style="color:#fdffb6;" class="btn btn-primary"><i class="fa-regular fa-pen-to-square"></i></button></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><button style="color:#ffac81;" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></button></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><button style="color:#f08080;" class="btn btn-primary"><i class="fa-sharp fa-regular fa-trash-can"></i></button></a>
                </td>
            </tr>
        }
    </tbody>
</table>
