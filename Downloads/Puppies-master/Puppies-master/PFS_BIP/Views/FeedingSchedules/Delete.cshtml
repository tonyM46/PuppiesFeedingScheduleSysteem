@model PFS_BIP.Models.FeedingSchedule

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>FeedingSchedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Puppy Id:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PuppyId)
        </dd>
        <dt class="col-sm-2">
            Start Time:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FeedingTimes.FirstOrDefault().StartTime)
        </dd>
        <dt class="col-sm-2">
            End Time:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FeedingTimes.FirstOrDefault().EndTime)
        </dd>
        <dt class="col-sm-2">
            Number of Meals:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfMeals)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" style="color:#f08080;" />
        <br />
        <br />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
